<div class='container w-50 p-3'>
  <h2><%= @user.name%>さんとのチャット</h2>

  <%= form_with model: [@user,@message], url: user_direct_messages_path, method: :post do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :receiver_id, value: @user.id %>
  <% end %>

  <% @messages.each do |message| %>
    <div class="<%= message.sender == current_user ? "from_me" : "from_other" %>">
      <%= message.message %>
    </div>
  <% end %>
</div>