<div class="js-destroy-target<%= book_comment.id %>">
  <span class="avatar">
    <%= link_to(book_comment.user) do %>
      <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
      <%= book_comment.user.name %>
    <% end %>
  </span>
  <span><%= book_comment.comment %></span>
  <span class="destory-comment">
    <% if book_comment.user == current_user %>
      <%= form_with url: book_book_comment_path(book_comment.book, book_comment), local: false, method: :delete do |f| %>
        <%= f.submit "Destroy", class: "btn btn-sm btn-danger" %>
      <% end %>
    <% end %>
  </span>
</div>
