<div class="search-form">
  <%= form_with url: search_path, method: :get  do |f| %>
    <%= f.text_field :search_word, class: 'search_word' %>
    <%= f.select :target, %i[user book] %>
    <%= f.select :type, options_from_collection_for_select([[:exact, "完全一致"], [:part, "部分一致"]],:first,:last,2) %>
    <%= f.submit "検索", class: 'btn btn-success' %>
  <% end %>
</div>
